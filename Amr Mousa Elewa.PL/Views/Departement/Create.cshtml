@model  Departement
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Departement</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>
   
    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-controller="Departement" asp-action="Index" class="btn btn-light">Back to list </a>

</form>