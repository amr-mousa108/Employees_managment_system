 @model Employee

@{
    ViewData["Title"] = "Details";
}

<div class="container py-5" style="background-color:#f8f9fa; min-height:100vh;">
    <h1 class="mb-4 text-center fw-bold">Employee Details</h1>

    <div class="card shadow p-4 mb-4 mx-auto" style="max-width:700px; border-radius:15px; background-color:#ffffff;">
        <div class="row g-3">
            <div class="col-md-4 text-center">
                <img src="~/Images/@Model.Image" class="img-fluid rounded" style="max-width:200px; max-height:200px; object-fit:cover;" alt="Employee Image">
            </div>

            <div class="col-md-8">
                <dl class="row fs-5">
                    <dt class="col-sm-4 fw-bold">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4 fw-bold">Age</dt>
                    <dd class="col-sm-8">@Model.Age</dd>

                    <dt class="col-sm-4 fw-bold">Address</dt>
                    <dd class="col-sm-8">@Model.Address</dd>

                    <dt class="col-sm-4 fw-bold">Active</dt>
                    <dd class="col-sm-8">@((Model.IsActive) ? "Yes" : "No")</dd>

                    <dt class="col-sm-4 fw-bold">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4 fw-bold">Phone</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4 fw-bold">Salary</dt>
                    <dd class="col-sm-8">@Model.Salary.ToString("C")</dd>

                    <dt class="col-sm-4 fw-bold">Hire Date</dt>
                    <dd class="col-sm-8">@Model.HireDate.ToShortDateString()</dd>
                </dl>

                <div class="mt-3">
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
