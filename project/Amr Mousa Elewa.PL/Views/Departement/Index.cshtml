@{
}
@model IEnumerable<Departement>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departements</h1>
<br />
<br />

<a asp-controller="Departement" asp-action="Create" class="btn btn-primary" >Create New Departement</a>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var departement in Model)
            {
                <tr>
                    <td>@departement.Code</td>
                    <td>@departement.Name</td>
                    <td>
                        <a asp-controller="Departement" asp-action="Details" asp-route-id="@departement.Id" class="btn btn-warning"><i class="fas fa-eye"></i> Details </a>
                    </td>
                    <td>
                        <a asp-controller="Departement" asp-action="Edit" asp-route-id="@departement.Id" class="btn btn-success"><i class="fas fa-edit"></i> Update </a>
                    </td>
                    <td>
                        <a asp-controller="Departement" asp-action="Delete" asp-route-id="@departement.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h1>There are no Departements :(</h1>
    </div>
}
<style>

    .table thead th {
        font-size: 1.2rem;
    }

    .table tbody td {
        font-size: 1.1rem;
        padding: 12px;
    }

</style>